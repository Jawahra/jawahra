<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  USER PROFILE  -->
    <style name="user_pfp_bg" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>


    </style>

    <!--  BUTTONS  -->
    <style name="btn_login_signup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:backgroundTint">@color/transparent_light</item>
        <item name="android:outlineSpotShadowColor">@color/transparent_light</item>
        <item name="android:textColor">#444</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/karla</item>
    </style>

    <!--  USER INPUT  -->
    <style name="sign_up_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_custom</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/karla</item>
    </style>

    <style name="home_feature_banner">
        <item name="android:fontFamily">@font/playfair_display_bold</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>