<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  USER PROFILE  -->
    <style name="user_pfp_bg" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <!--  BUTTONS  -->
    <style name="btn_login_signup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:background">@color/transparent_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/quicksand</item>
    </style>

    <!--  USER INPUT  -->
    <style name="sign_up_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_custom</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/quicksand</item>
    </style>

</resources>